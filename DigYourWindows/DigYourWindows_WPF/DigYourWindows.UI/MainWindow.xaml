<ui:FluentWindow x:Class="DigYourWindows.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="DigYourWindows - Windows 深度诊断工具" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="DigYourWindows" Icon="pack://application:,,,/Assets/icon.ico">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="时间范围:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox ItemsSource="{Binding AvailableDays}" 
                             SelectedItem="{Binding SelectedDaysBack}" 
                             Width="80" 
                             Margin="0,0,10,0"/>
                    <TextBlock Text="天" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <ui:Button Content="刷新数据" 
                              Command="{Binding LoadDataCommand}" 
                              Icon="{ui:SymbolIcon Refresh24}"
                              Appearance="Primary"/>
                    <ui:Button Content="导出报告" 
                              Command="{Binding ExportToHtmlCommand}" 
                              Icon="{ui:SymbolIcon DocumentArrowUp24}"
                              Margin="10,0,0,0"/>
                    <ui:Button Content="导出JSON" 
                              Command="{Binding ExportToJsonCommand}" 
                              Icon="{ui:SymbolIcon DocumentArrowUp24}"
                              Margin="10,0,0,0"/>
                    <ui:Button Content="导入JSON" 
                              Command="{Binding ImportFromJsonCommand}"
                              Margin="10,0,0,0"/>
                    <ui:Button Content="切换主题" 
                              Command="{Binding ToggleThemeCommand}" 
                              Icon="{ui:SymbolIcon WeatherMoon24}"
                              Margin="10,0,0,0"/>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- System Overview -->
                <ui:CardExpander Header="系统概览" Icon="{ui:SymbolIcon Desktop24}" IsExpanded="True">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <ui:Card Grid.Column="0" Margin="5">
                            <StackPanel Margin="15">
                                <TextBlock Text="计算机名" FontWeight="SemiBold" Foreground="Gray"/>
                                <TextBlock Text="{Binding HardwareInfo.ComputerName}" FontSize="16" Margin="0,5"/>
                            </StackPanel>
                        </ui:Card>
                        
                        <ui:Card Grid.Column="1" Margin="5">
                            <StackPanel Margin="15">
                                <TextBlock Text="CPU" FontWeight="SemiBold" Foreground="Gray"/>
                                <TextBlock Text="{Binding HardwareInfo.CpuName}" FontSize="14" Margin="0,5" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding HardwareInfo.CpuCores, StringFormat='{}{0} 核心'}" FontSize="12"/>
                            </StackPanel>
                        </ui:Card>
                        
                        <ui:Card Grid.Column="2" Margin="5">
                            <StackPanel Margin="15">
                                <TextBlock Text="内存" FontWeight="SemiBold" Foreground="Gray"/>
                                <TextBlock FontSize="16" Margin="0,5">
                                    <Run Text="{Binding HardwareInfo.TotalMemoryMB, StringFormat='{}{0:N0}'}"/>
                                    <Run Text=" MB"/>
                                </TextBlock>
                            </StackPanel>
                        </ui:Card>
                        
                        <ui:Card Grid.Column="3" Margin="5">
                            <StackPanel Margin="15">
                                <TextBlock Text="操作系统" FontWeight="SemiBold" Foreground="Gray"/>
                                <TextBlock Text="{Binding HardwareInfo.OsVersion}" FontSize="12" Margin="0,5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </ui:Card>
                    </Grid>
                </ui:CardExpander>

                <!-- Performance Analysis -->
                <ui:CardExpander Header="系统性能分析" Icon="{ui:SymbolIcon LightningBolt24}" IsExpanded="True" Margin="0,10,0,0">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Performance Scores -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Card Grid.Column="0" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="系统健康评分" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{Binding PerformanceAnalysis.HealthColor}"/>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding PerformanceAnalysis.SystemHealthScore, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="/100"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding PerformanceAnalysis.HealthGrade}" HorizontalAlignment="Center" FontSize="12" Margin="0,2,0,0"/>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="1" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="稳定性评分" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.StabilityScore, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="/100"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="2" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="性能评分" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.PerformanceScore, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="/100"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="3" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="内存评分" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.MemoryUsageScore, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="/100"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="4" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="磁盘健康" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.DiskHealthScore, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="/100"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                        </Grid>
                        
                        <!-- Additional Metrics -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Card Grid.Column="0" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="关键问题" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.CriticalIssuesCount, StringFormat='{}{0}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="1" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="警告数量" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" Foreground="Orange" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.WarningsCount, StringFormat='{}{0}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="2" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="系统运行时间" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5">
                                        <Run Text="{Binding PerformanceAnalysis.SystemUptimeDays, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="天"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                            
                            <!-- Placeholder for future metrics -->
                            <ui:Card Grid.Column="3" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="CPU 实时" FontWeight="SemiBold" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                                        <TextBlock Text="{Binding CpuInfo.Temperature, StringFormat='{}{0:F1}'}" FontSize="20" FontWeight="Bold"/>
                                        <TextBlock Text="°C" FontSize="14" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                    </StackPanel>
                                    <TextBlock FontSize="12" Foreground="Gray" HorizontalAlignment="Center">
                                        <Run Text="负载 "/>
                                        <Run Text="{Binding CpuInfo.Load, StringFormat='{}{0:F0}'}"/>
                                        <Run Text="%  "/>
                                        <Run Text="频率 "/>
                                        <Run Text="{Binding CpuInfo.Clock, StringFormat='{}{0:F0}'}"/>
                                        <Run Text=" MHz"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                        </Grid>
                        
                        <!-- Recommendations -->
                        <ui:Card Grid.Row="2" Margin="5" Visibility="{Binding PerformanceAnalysis.Recommendations.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <StackPanel Margin="10">
                                <TextBlock Text="优化建议" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding PerformanceAnalysis.Recommendations}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                                <ui:SymbolIcon Symbol="Info16" Foreground="Blue" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ui:Card>
                    </Grid>
                </ui:CardExpander>

                <ui:CardExpander Header="网络流量监控" 
                                Icon="{ui:SymbolIcon ChartMultiple24}" 
                                IsExpanded="True" 
                                Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ui:Card Grid.Column="0" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="下载" FontWeight="SemiBold" Foreground="Gray"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" Margin="0,5,0,0">
                                        <Run Text="{Binding NetworkDownloadMBps, StringFormat='{}{0:F2}'}"/>
                                        <Run Text=" MB/s" FontSize="12"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>

                            <ui:Card Grid.Column="1" Margin="5">
                                <StackPanel Margin="10">
                                    <TextBlock Text="上传" FontWeight="SemiBold" Foreground="Gray"/>
                                    <TextBlock FontSize="20" FontWeight="Bold" Margin="0,5,0,0">
                                        <Run Text="{Binding NetworkUploadMBps, StringFormat='{}{0:F2}'}"/>
                                        <Run Text=" MB/s" FontSize="12"/>
                                    </TextBlock>
                                </StackPanel>
                            </ui:Card>
                        </Grid>

                        <ContentControl Content="{Binding NetworkTrafficPlot, Mode=OneTime}" Height="220" Margin="5"/>
                    </StackPanel>
                </ui:CardExpander>

                <!-- GPU Monitoring -->
                <ui:CardExpander Header="{Binding HardwareInfo.Gpus.Count, StringFormat='GPU 监控 - {0} 个设备'}" 
                                Icon="{ui:SymbolIcon ShieldTask24}" 
                                IsExpanded="True" 
                                Margin="0,10,0,0">
                    <ItemsControl ItemsSource="{Binding HardwareInfo.Gpus}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ui:Card Margin="0,5">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                        
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="温度" FontSize="12" Foreground="Gray"/>
                                                <TextBlock FontSize="18" FontWeight="Bold">
                                                    <Run Text="{Binding Temperature, StringFormat='{}{0:F1}'}"/>
                                                    <Run Text="°C" FontSize="14"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="负载" FontSize="12" Foreground="Gray"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Load, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Bold"/>
                                                    <TextBlock Text="%" FontSize="14" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="显存使用" FontSize="12" Foreground="Gray"/>
                                                <TextBlock FontSize="14" FontWeight="SemiBold">
                                                    <Run Text="{Binding MemoryUsed, StringFormat='{}{0:F0}'}"/>
                                                    <Run Text="/"/>
                                                    <Run Text="{Binding MemoryTotal, StringFormat='{}{0:F0}'}"/>
                                                    <Run Text=" MB" FontSize="12"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="3">
                                                <TextBlock Text="功耗" FontSize="12" Foreground="Gray"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Power, StringFormat='{}{0:F1}'}" FontSize="18" FontWeight="Bold"/>
                                                    <TextBlock Text="W" FontSize="14" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </ui:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ui:CardExpander>

                <!-- Reliability Trend -->
                <ui:CardExpander Header="可靠性趋势" 
                                Icon="{ui:SymbolIcon ChartMultiple24}" 
                                IsExpanded="True" 
                                Margin="0,10,0,0">
                    <ContentControl Content="{Binding ReliabilityTrendPlot, Mode=OneTime}" Height="220" Margin="10"/>
                </ui:CardExpander>

                <!-- Reliability Records -->
                <ui:CardExpander Icon="{ui:SymbolIcon ChartMultiple24}" 
                                IsExpanded="False" 
                                Margin="0,10,0,0">
                    <ui:CardExpander.Header>
                        <TextBlock>
                            <Run Text="可靠性记录 (最近"/>
                            <Run Text="{Binding SelectedDaysBack}"/>
                            <Run Text="天) - "/>
                            <Run Text="{Binding ReliabilityRecords.Count}"/>
                            <Run Text=" 条"/>
                        </TextBlock>
                    </ui:CardExpander.Header>
                    <DataGrid ItemsSource="{Binding ReliabilityRecords}" 
                             AutoGenerateColumns="False" 
                             IsReadOnly="True"
                             Height="300"
                             Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="时间" Binding="{Binding TimeGenerated, StringFormat='yyyy-MM-dd HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="产品" Binding="{Binding ProductName}" Width="200"/>
                            <DataGridTextColumn Header="类型" Binding="{Binding RecordTypeDescription}" Width="100"/>
                            <DataGridTextColumn Header="消息" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ui:CardExpander>

                <!-- Event Logs -->
                <ui:CardExpander Icon="{ui:SymbolIcon ErrorCircle24}" 
                                IsExpanded="True" 
                                Margin="0,10,0,0">
                    <ui:CardExpander.Header>
                        <TextBlock>
                            <Run Text="错误日志 (最近"/>
                            <Run Text="{Binding SelectedDaysBack}"/>
                            <Run Text="天) - "/>
                            <Run Text="{Binding EventLogEntries.Count}"/>
                            <Run Text=" 条"/>
                        </TextBlock>
                    </ui:CardExpander.Header>
                    <DataGrid ItemsSource="{Binding EventLogEntries}" 
                             AutoGenerateColumns="False" 
                             IsReadOnly="True"
                             Height="300"
                             Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="时间" Binding="{Binding TimeGenerated, StringFormat='yyyy-MM-dd HH:mm'}" Width="140"/>
                            <DataGridTextColumn Header="来源" Binding="{Binding Source}" Width="150"/>
                            <DataGridTextColumn Header="类型" Binding="{Binding EventType}" Width="80"/>
                            <DataGridTextColumn Header="消息" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ui:CardExpander>

                <!-- Hardware Details -->
                <ui:CardExpander Header="硬件详情" Icon="{ui:SymbolIcon HardDrive24}" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        
                        <!-- Disks -->
                        <TextBlock Text="磁盘" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,10"/>
                        <ItemsControl ItemsSource="{Binding HardwareInfo.Disks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Card Margin="0,5">
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="SemiBold" Margin="0,0,15,0"/>
                                            <ProgressBar Grid.Column="1" Value="{Binding UsagePercentage}" Maximum="100" Height="20"/>
                                            <TextBlock Grid.Column="2" Margin="10,0,0,0">
                                                <Run Text="{Binding FreeSpaceGB, StringFormat='{}{0} GB'}"/>
                                                <Run Text=" / "/>
                                                <Run Text="{Binding TotalSizeGB, StringFormat='{}{0} GB'}"/>
                                                <Run Text=" 可用"/>
                                            </TextBlock>
                                        </Grid>
                                    </ui:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="磁盘 SMART" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"
                                   Visibility="{Binding HardwareInfo.DiskSmart.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        <DataGrid ItemsSource="{Binding HardwareInfo.DiskSmart}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 MaxHeight="250"
                                 Visibility="{Binding HardwareInfo.DiskSmart.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding FriendlyName}" Width="*"/>
                                <DataGridTextColumn Header="介质" Binding="{Binding MediaTypeDescription}" Width="70"/>
                                <DataGridTextColumn Header="接口" Binding="{Binding BusTypeDescription}" Width="80"/>
                                <DataGridTextColumn Header="健康" Binding="{Binding HealthStatusDescription}" Width="70"/>
                                <DataGridTextColumn Header="温度" Binding="{Binding Temperature, StringFormat='{}{0}°C'}" Width="70"/>
                                <DataGridTextColumn Header="磨损" Binding="{Binding Wear, StringFormat='{}{0}%'}" Width="70"/>
                                <DataGridTextColumn Header="通电" Binding="{Binding PowerOnHours, StringFormat='{}{0}h'}" Width="70"/>
                                <DataGridTextColumn Header="容量" Binding="{Binding SizeGB, StringFormat='{}{0} GB'}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Network Adapters -->
                        <TextBlock Text="网络适配器" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
                        <DataGrid ItemsSource="{Binding HardwareInfo.NetworkAdapters}" 
                                 AutoGenerateColumns="False" 
                                 IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="MAC 地址" Binding="{Binding MacAddress}" Width="150"/>
                                <DataGridTextColumn Header="IP 地址" Binding="{Binding IpAddress}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- USB Controllers -->
                        <TextBlock Text="USB 控制器" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
                        <DataGrid ItemsSource="{Binding HardwareInfo.UsbControllers}" 
                                 AutoGenerateColumns="False" 
                                 IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="制造商" Binding="{Binding Manufacturer}" Width="200"/>
                                <DataGridTextColumn Header="协议" Binding="{Binding Protocol}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- USB Devices -->
                        <TextBlock Text="USB 设备" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
                        <DataGrid ItemsSource="{Binding HardwareInfo.UsbDevices}" 
                                 AutoGenerateColumns="False" 
                                 IsReadOnly="True"
                                 MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="300"/>
                                <DataGridTextColumn Header="制造商" Binding="{Binding Manufacturer}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ui:CardExpander>
                
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <ui:Card Grid.Row="2" Margin="0">
            <Grid Height="35" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <ui:ProgressRing IsIndeterminate="True" 
                                Width="20" Height="20"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <TextBlock Grid.Column="1" 
                          Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" 
                          Margin="10,0"/>
            </Grid>
        </ui:Card>
    </Grid>
</ui:FluentWindow>
